{
  "variables": {
    "subscription_id": "",
    "location": "northeurope",
    "managed_image_resource_group_name": "packerimages-rg",
    "managed_image_name": "wgserver",
    "ssh_port": "22389"
  },
  "builders": [
    {
      "type": "azure-arm",
      "subscription_id": "{{user `subscription_id`}}",
      "os_type": "Linux",
      "image_publisher": "Canonical",
      "image_offer": "UbuntuServer",
      "image_sku": "18.04-LTS",
      "location": "{{user `location`}}",
      "vm_size": "Standard_A1_v2",
      "managed_image_name": "{{user `managed_image_name`}}",
      "managed_image_resource_group_name": "{{user `managed_image_resource_group_name`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
      "environment_vars": ["ssh_port={{user `ssh_port`}}"],
      "inline": [
        "sed -i \"s/#Port 22/Port $ssh_port/\" /etc/ssh/sshd_config && systemctl restart sshd"
      ],
      "expect_disconnect": true
    },
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
      "scripts": [
        "scripts/prereqs.sh",
        "scripts/setup_wg.sh",
        "scripts/cloudflared.sh"
      ]
    },
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
      "inline": [
        "/usr/sbin/waagent -force -deprovision+user && export HISTSIZE=0 && sync"
      ],
      "inline_shebang": "/bin/sh -x"
    }
  ]
}